<div class="container-fluid">
  <div class="row" style="margin-top: 30px;">
    <div class="col-md-5 offset-md-1">

      <div class="card">
        <div class="card-header">
          プロフィール
        </div>
        <div class="card-body">
          <div class="user_image">
            <% if @user.picture? %>
              <%= image_tag("icon.png") %>
            <% else %>
              <%= image_tag("default.png",:size => '80x80') %>
            <% end %>
          </div>
          <p>ユーザー名: <%= @user.name%></p>
          <p>投稿数: <%= @user.articles.count %></p>
          <p>開始日: <%= format_time(@user.created_at) %></p>
          <%= link_to edit_user_path(current_user.id) do %>
            <div class="btn btn-success">編集</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2 class="page-title">記事一覧</h2>

      <% @articles.includes(:goods, :user).each do |article| %>
        <div class="card article">
          <div class="card-header">
            <p class="article-title"><%= link_to article.title, article_path(id: article.id), {class: "link"} %></p>
            <p class="user-name"><%= link_to article.user.name, user_path(id: article.user.id), {class: "link"} %></p>
          </div>
          <div class="card-body">
            <p class="card-text"><%= article.content%></p>
            <div class="good-form">
              <%= render 'articles/good_form', {article: article} %>
            </div>
            <p class="text-right"><%= format_time(article.created_at) %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

