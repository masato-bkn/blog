<div class="container-fluid">
  <div class="row" style="margin-top: 30px;">
    <div class="col-md-5 offset-md-1">

      <div class="card">
        <div class="card-header">
          プロフィール
        </div>
        <div class="card-body">
          <%= form_with(model: @user, local: true) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="user_image">
              <% if @user.picture? %>
                <%= image_tag @user.picture.url %>
              <% else %>
                <%= image_tag "default.png",:size => '80x80' %>
              <% end %>
                <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
            </div>
            <p>ユーザー名: <%= f.text_field :name %></p>
            <p>email: <%= f.email_field :email %></p>
            <%= f.submit "更新", class: "btn btn-info" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $('#user_picture').bind('change', function() {
        var size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
            window.alert('Maximum file size is 5MB. Please choose a smaller file.');
        }
    });
</script>
