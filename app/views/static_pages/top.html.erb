<p class="h2 text-dark page-title">記事一覧</p>

<% @articles.includes(:goods).each do |article| %>
  <div class="card card-article">
    <div class="card-header card-article-header">
      <%=link_to article.title,article_path(id: article.id), class: "card-article-title"  %>
      <p class="user-name">
        <%= article.user.name%>
      </p>
    </div>
    <div class="card-body">
      <p class="card-text"><%= article.content%></p>
      <div class="good-form">
        <%= render 'articles/good_form', {article: article} %>
      </div>
      <p class="text-right"><%= format_time(article.created_at) %></p>
    </div>
  </div>
<% end %>
