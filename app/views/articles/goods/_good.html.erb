<div id="good-<%= article.id %>">
  <%= form_with(model: article.goods.build, url: article_goods_path, remote: true) do |f| %>
      <%= hidden_field_tag :article_id, article.id %>
      <%= f.button :type => "submit", class: "good-btn" do %>
        <i class="far fa-thumbs-up fa-fw"></i>
      <% end %>
    <%= article.good_count %>
  <% end %>
</div>