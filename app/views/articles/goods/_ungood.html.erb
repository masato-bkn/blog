<div id="ungood-<%= article.id %>">
  <%= form_with(url: article_good_path(current_user.article_goods.find_by(article_id: article.id).id, article_id: article.id),
                method: :delete,
                remote: true
      ) do |f| %>
    <%= hidden_field_tag :article_id, article.id %>
    <%= f.button :type => "submit", class: "ungood-btn" do %>
      <i class="fas fa-thumbs-up fa-fw"></i>
    <% end %>
    <%= article.good_count %>
  <% end %>
</div>