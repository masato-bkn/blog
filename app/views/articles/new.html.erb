<h1>投稿</h1>

<%= form_with(model: @article, url: articles_path, local: true) do |f| %>

  <% if f.object.errors.any? %>
    <div class="alert alert-danger error_explanation">
      <ul>
        <% f.object.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div>
    <%= f.label :title%>
    <%= f.text_field :title%>
</div>

<div>
    <%= f.label :content%>
    <%= f.text_field :content%>
</div>

<div class="btn">
    <%= f.submit "Submit" %>
</div>

<% end %>