<div id="good-<%= comment.id %>">
  <%= form_with(model: comment.goods.build, url: comment_goods_path, remote: true) do |f| %>
      <%= hidden_field_tag :comment_id, comment.id %>
      <%= f.button :type => "submit", class: "good-btn" do %>
        <i class="far fa-thumbs-up fa-fw"></i>
      <% end %>
      <%=  comment.goods.count %>
  <% end %>
</div>